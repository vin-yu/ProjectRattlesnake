@{
    ViewData["Title"] = "Project Rattlesnake - Upload a Recording";
}


       
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel" >
                    <div class="x_title">
                        <h2>Dropzone multiple file uploader</h2>
                        <p>@ViewBag.Subject</p>
                        <p>@ViewBag.Name</p>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form enctype="multipart/form-data" method="post" action="/Home/UploadFile/" id="ajaxUploadForm" novalidate="novalidate">

                            <fieldset>
                                <legend style="padding-top: 10px; padding-bottom: 10px;">Uploaded Form</legend>

                                <div class="col-xs-12" style="padding: 10px;">
                                    <div class="col-xs-4">
                                        <label>Description</label>
                                    </div>
                                    <div class="col-xs-7">
                                        <textarea rows="2" placeholder="Description" class="form-control" name="description" id="description"></textarea>
                                    </div>
                                </div>

                                <div class="col-xs-12" style="padding: 10px;">
                                    <div class="col-xs-4">
                                        <label>Upload</label>
                                    </div>




                                    <div class="col-xs-7">
                                        <input id="file" type="file" name="file">

                                    </div>



                                </div>


                                <div class="col-xs-12" style="padding: 10px;">
                                    <div class="col-xs-4">
                                        <input type="submit" value="Upload" id="ajaxUploadButton" class="btn">
</div>
                                    <div class="col-xs-7">

                                    </div>
                                </div>

                            </fieldset>
                        <br />
                    </div>
                </div>
            </div>
        </div>